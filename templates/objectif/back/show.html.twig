{% extends 'back.html.twig' %}

{% block title %}Détail de l'objectif{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0"><i class="fas fa-bullseye me-2"></i>Détails de l'objectif</h3>
                <a href="{{ path('app_objectif_index') }}" class="btn btn-light btn-sm">
                    <i class="fas fa-arrow-left me-1"></i> Retour à la liste
                </a>
            </div>
        </div>

        <div class="card-body p-4">
            <table class="table table-bordered table-striped">
                <tbody>
                    <tr>
                        <th style="width: 200px;">ID</th>
                        <td>{{ objectif.id }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ objectif.nom }}</td>
                    </tr>
                    <tr>
                        <th>Image</th>
                        <td>
                            {% if objectif.image %}
                                <img src="{{ asset(objectif.image) }}" alt="Image" style="max-height: 120px; border-radius: 5px; border: 1px solid #ccc;">
                            {% else %}
                                <span class="text-muted">Aucune image</span>
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ objectif.description }}</td>
                    </tr>
                    <tr>
                        <th>Niveau</th>
                        <td>{{ objectif.niveau }}</td>
                    </tr>
                    <tr>
                        <th>Semaine</th>
                        <td>{{ objectif.semaine }}</td>
                    </tr>
                    <tr>
                        <th>Lien</th>
                        <td>
                            {% if objectif.lien %}
                                <a href="{{ objectif.lien }}" target="_blank">{{ objectif.lien }}</a>
                            {% else %}
                                <span class="text-muted">-</span>
                            {% endif %}
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="card-footer bg-light text-end">
            <a href="{{ path('app_objectif_edit', {'id': objectif.id}) }}" class="btn btn-warning me-2">
                <i class="fas fa-edit me-1"></i> Modifier
            </a>
            {{ include('objectif/back/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
