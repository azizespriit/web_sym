{% extends 'back.html.twig' %}

{% block title %}Détail du Plan{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0"><i class="fas fa-dumbbell me-2"></i>Détails du plan</h3>
                <a href="{{ path('app_plan_by_objectif', {'id': plan.getIdObj().id}) }}" class="btn btn-light btn-sm">
                    <i class="fas fa-arrow-left me-1"></i> Retour à la liste
                </a>
            </div>
        </div>

        <div class="card-body p-4">
            <table class="table table-bordered table-striped">
                <tbody>
                   
                    <tr>
                        <th>Jour</th>
                        <td>{{ plan.Jour }}</td>
                    </tr>
                    <tr>
                        <th>Nutrition</th>
                        <td>{{ plan.Nutration }}</td>
                    </tr>
                    <tr>
                        <th>Muscles ciblés</th>
                        <td>{{ plan.Muscle }}</td>
                    </tr>
                    <tr>
                        <th>Distance (km)</th>
                        <td>{{ plan.Course }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="card-footer bg-light text-end">
            <a href="{{ path('app_plan_edit', {'id': plan.id}) }}" class="btn btn-warning me-2">
                <i class="fas fa-edit me-1"></i> Modifier
            </a>
            {{ include('plan/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
