{% extends 'back.html.twig' %}

{% block title %}Créer un Plan{% endblock %}

{% block body %}
<div class="container-fluid py-5" style="background-color:#fff; min-height: 100vh;">
    <div class="row justify-content-center align-items-center h-100">
        <div class="col-lg-8 col-xl-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white py-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="mb-0" style="font-size: 1.8rem; font-weight: 600;">
                            <i class="fas fa-calendar-alt me-2"></i>NOUVEAU PLAN
                        </h2>
                        <a href="{{ path('app_plan_by_objectif', {'id': plan.getIdObj().id}) }}" class="btn btn-light btn-sm">
                            <i class="fas fa-arrow-left me-2"></i>Retour
                        </a>
                    </div>
                </div>

                <div class="card-body p-5">
                    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                    <div class="row mb-4">
                        <div class="col-md-6">
                            {{ form_label(form.Jour, "Jour", {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.Jour, {'attr': {'class': 'form-control form-control-lg py-3'}}) }}
                        </div>

                        <div class="col-md-6">
                            {{ form_label(form.Course, "Distance (km)", {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.Course, {'attr': {'class': 'form-control py-3', 'step': '0.1'}}) }}
                        </div>
                    </div>

                    <div class="mb-4">
                        {{ form_label(form.Nutration, "Nutrition", {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        {{ form_widget(form.Nutration, {'attr': {'class': 'form-control', 'rows': 3, 'placeholder': 'Décrivez le plan nutritionnel...'}}) }}
                    </div>

                    <div class="mb-4">
                        {{ form_label(form.Muscle, "Muscles ciblés", {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        {{ form_widget(form.Muscle, {'attr': {'class': 'form-control', 'placeholder': 'Ex: Pectoraux, Biceps...'}}) }}
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-5">
                        <button type="submit" class="btn btn-primary btn-lg px-5 py-3">
                            <i class="fas fa-save me-2"></i>Enregistrer
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-control, .form-select {
        font-size: 1.1rem;
        border-radius: 0.5rem;
        padding: 0.75rem 1rem;
        border: 1px solid #ced4da;
    }
    .form-control:focus, .form-select:focus {
        border-color: #7f858f;
        box-shadow: 0 0 0 0.25rem rgba(69, 70, 72, 0.25);
    }
    .card {
        border-radius: 1rem;
        overflow: hidden;
    }
    .card-header {
        border-bottom: none;
    }
    .btn-lg {
        font-size: 1.1rem;
        border-radius: 0.5rem;
    }
    .form-label {
        font-size: 1.1rem;
        margin-bottom: 0.5rem;
    }
    textarea.form-control {
        min-height: 120px;
    }
</style>

{% endblock %}
