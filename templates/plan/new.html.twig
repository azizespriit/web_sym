{% extends 'back.html.twig' %}

{% block title %}Créer un Plan{% endblock %}

{% block body %}
<div class="container-fluid py-5 background-container">
    <div class="row justify-content-center align-items-center h-100">
        <div class="col-lg-8 col-xl-6">
            <div class="card shadow-lg border-0 custom-card">
                <div class="card-header bg-primary text-white py-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="mb-0">
                            <i class="fas fa-calendar-alt me-2"></i>NOUVEAU PLAN
                        </h2>
                        <a href="{{ path('app_plan_by_objectif', {'id': plan.getIdObj().id}) }}" class="btn btn-light btn-sm">
                            <i class="fas fa-arrow-left me-2"></i>Retour
                        </a>
                    </div>
                </div>

                <div class="card-body p-5">
                    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                    <div class="row mb-4">
                        <div class="col-md-6">
                            {{ form_label(form.Jour, "Jour de la semaine", {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.Jour, {
                                'attr': {
                                    'class': 'form-select',
                                    'data-objectif-id': plan.getIdObj().id
                                }
                            }) }}
                            {{ form_errors(form.Jour) }}
                            
                            {% if form.Jour.vars.choices is empty %}
                                <div class="alert alert-warning mt-2">
                                    Aucun jour disponible pour cet objectif. Veuillez d'abord créer des jours.
                                </div>
                            {% endif %}
                        </div>

                        <div class="col-md-6">
                            {{ form_label(form.Course, "Distance (km)", {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.Course, {'attr': {'class': 'form-control', 'step': '0.1'}}) }}
                        </div>
                    </div>

                    <div class="mb-4">
                        {{ form_label(form.Nutration, "Nutrition", {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.Nutration, {'attr': {
                            'class': 'form-control',
                            'rows': 3,
                            'placeholder': 'Décrivez le plan nutritionnel...'
                        }}) }}
                    </div>

                    <div class="mb-4">
                        {{ form_label(form.Muscle, "Muscles ciblés", {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.Muscle, {'attr': {
                            'class': 'form-control',
                            'placeholder': 'Ex: Pectoraux, Biceps...'
                        }}) }}
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-5">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save me-2"></i>Enregistrer
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .background-container {
        min-height: 100vh;
        background-image: url('{{ asset('assets1/vvv.webp') }}');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        background-blend-mode: overlay;
        background-color: rgba(255, 255, 255, 0.85);
    }

    .custom-card {
        border-radius: 1rem;
        overflow: hidden;
        background-color: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(5px);
    }

    .card-header {
        border-bottom: none;
        background: linear-gradient(135deg, #3498db 0%, #2c3e50 100%);
    }

    .form-control, .form-select {
        font-size: 1rem;
        border-radius: 0.5rem;
        padding: 0.75rem 1rem;
        border: 1px solid #ced4da;
        background-color: rgba(255, 255, 255, 0.8);
        transition: all 0.3s ease;
    }

    .form-control:focus, .form-select:focus {
        border-color: #3498db;
        box-shadow: 0 0 0 0.25rem rgba(52, 152, 219, 0.25);
        background-color: white;
    }

    .form-label {
        font-size: 1rem;
        margin-bottom: 0.5rem;
        font-weight: 600;
        color: #2c3e50;
    }

    textarea.form-control {
        min-height: 120px;
        resize: vertical;
    }

    .btn-primary {
        background-color: #3498db;
        border-color: #3498db;
        padding: 0.75rem 2rem;
        font-weight: 600;
    }

    .btn-primary:hover {
        background-color: #2980b9;
        border-color: #2980b9;
    }

    .alert-warning {
        background-color: rgba(255, 193, 7, 0.2);
        border-color: #ffc107;
    }

    h2 {
        font-size: 1.8rem;
        font-weight: 600;
        color: white;
    }

    @media (max-width: 768px) {
        .background-container {
            background-attachment: scroll;
        }
        .card-body {
            padding: 2rem;
        }
    }
</style>
{% endblock %}